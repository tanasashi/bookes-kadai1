<p class="flash"><%= flash[:success] %></p>
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>

<h4><%= f.submit 'Update Book' %></h4>


<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>

<% end %>